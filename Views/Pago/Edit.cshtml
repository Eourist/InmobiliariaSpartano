@model InmobiliariaSpartano.Models.Pago

@{
    ViewData["Title"] = "Editar";
    string error = ViewData["Error"]?.ToString();
}

<h1>Editar</h1>
<p>@error</p>
<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select asp-for="ContratoId" class="form-control">
                    <option value="" hidden selected>Seleccionar</option>
                    @foreach (var contrato in ViewData["Contratos"] as List<Contrato>)
                    {
                        <option value="@contrato.Id">
                            @contrato.ToString()
                        </option>
                    }
                </select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-ContratoId="@Model.ContratoId">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
