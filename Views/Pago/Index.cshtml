@model IEnumerable<InmobiliariaSpartano.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1>Pagos</h1>

<p>
    <a asp-controller="Contrato" asp-action="Index" class="btn btn-outline-primary"><i class="fas fa-chevron-circle-left"></i> Volver</a>
    <a asp-action="Create" asp-route-ContratoId="@ViewData["ContratoId"]" class="btn btn-outline-primary"><i class="fas fa-cash-register"></i> Registrar pago</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContratoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.Contrato.ToString()
                </td>
                <td>
                    @item.Fecha.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>
