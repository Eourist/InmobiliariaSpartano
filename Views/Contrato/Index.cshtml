@model IEnumerable<InmobiliariaSpartano.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @item.Inmueble.ToString()
            </td>
            <td>
                @item.Inquilino.ToString()
            </td>
            <td>
                @item.FechaDesde.ToShortDateString()
            </td>
            <td>
                @item.FechaHasta.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) |
                <a asp-route-ContratoId="@item.Id" asp-controller="Pago" asp-action="Index">Pagos</a>
            </td>
        </tr>
}
    </tbody>
</table>
